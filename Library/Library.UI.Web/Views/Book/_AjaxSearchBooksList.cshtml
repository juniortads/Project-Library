
@model Library.UI.Web.Models.BookViewModel


@{
    Library.UI.Web.Models.BookViewModel book = new Library.UI.Web.Models.BookViewModel();

}

@{    
    var grid = new WebGrid(source: Model.Books, ajaxUpdateContainerId: "grid_list", selectionFieldName: "selectedRow", canPage: true, rowsPerPage: 20);  
    grid.Pager(WebGridPagerModes.NextPrevious); }

@grid.GetHtml(tableStyle: "table table-striped table-hover table-bordered table-condensed",
                                headerStyle: "header",
                                columns: grid.Columns(
                                grid.Column("Id", "Id"),
                                grid.Column("Name", "Name"),
                                grid.Column("Author", "Author"),
                                grid.Column("PublishingHouse", "Publishing House")))